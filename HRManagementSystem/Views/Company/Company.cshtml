@model HRManagementSystem.Models.Company

@{
    Layout = null;
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">@(Model.Id == 0 ? "Add Company" : "Edit Company")</div>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter Company Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="VatRegistrationNo"></label>
                                <input asp-for="VatRegistrationNo" class="form-control" placeholder="Enter VAT No" />
                            </div>

                            <div class="form-group">
                                <label asp-for="TinNo"></label>
                                <input asp-for="TinNo" class="form-control" placeholder="Enter TIN No" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="WebsiteLink"></label>
                                <input asp-for="WebsiteLink" class="form-control" placeholder="Enter Website" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ContactNumber"></label>
                                <input asp-for="ContactNumber" class="form-control" placeholder="Enter Contact No" />
                                <span asp-validation-for="ContactNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <textarea asp-for="Address" class="form-control" placeholder="Enter Address"></textarea>
                            </div>

                            <div class="form-group">
                                <label asp-for="LogoImage">Company Logo</label>
                                <input asp-for="LogoImage" type="file" class="form-control-file" />
                                @if (!string.IsNullOrEmpty(Model.LogoPath))
                                {
                                    <div class="mt-2">
                                        <img src="~/uploads/@Model.LogoPath" alt="Current Logo" width="150" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-primary btn-sm px-4">
                            @(Model.Id == 0 ? "Create" : "Update")
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
