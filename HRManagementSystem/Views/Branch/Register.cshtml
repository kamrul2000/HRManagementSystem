@model IEnumerable<HRManagementSystem.Models.Branch>
@{
    
    Layout = null;
    Layout = "~/Views/Shared/_Layout2.cshtml";


}
<section class="pc-container">
    <div class="pc-content">
        <div class="row">
            <!-- DOM/Jquery table start -->
            <div class="col-sm-12">
                <div class="card">

                    <div class="card-body">
                        <div class="dt-responsive">
                            <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Position</th>
                                        <th>Office</th>
                                        <th>Age</th>
                                        <th>Start date</th>
                                        <th>Salary</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Quinn Flynn</td>
                                        <td>System Architect</td>
                                        <td>Edinburgh</td>
                                        <td>61</td>
                                        <td>2011/04/25</td>
                                        <td>$320,800</td>
                                    </tr>
                                    <tr>
                                        <td>Garrett Winters</td>
                                        <td>Accountant</td>
                                        <td>Tokyo</td>
                                        <td>63</td>
                                        <td>2011/07/25</td>
                                        <td>$170,750</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ Main Content ] end -->
    </div>
</section>
<section class="pc-container">
    <div class="pc-content">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <div class="row">
            <!-- Table -->
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Branch List</h5>
                    </div>
                    <div class="card-body">
                        <div class="dt-responsive">
                            <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Address</th>
                                        <th>Contact</th>
                                        <th>Subscription ID</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                        foreach (var branch in Model)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <td>@branch.Name</td>
                                                <td>@branch.Address</td>
                                                <td>@branch.Contact</td>
                                                <td>@branch.SubscriptionId</td>
                                                <td>
                                                    <form asp-action="DeleteBranch" method="post" style="display:inline;">
                                                        <input type="hidden" name="id" value="@branch.Id" />
                                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                    </form>
                                                    <button type="button" class="btn btn-sm btn-primary"
                                                            onclick="editBranch(@branch.Id, '@branch.Name', '@branch.Address', '@branch.Contact', '@branch.SubscriptionId')">
                                                        Edit
                                                    </button>
                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form -->
            <div class="col-sm-12 mt-4">
                <div class="card">
                    <div class="card-header">
                        <h5 id="form-title">Add/Edit Branch</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="CreateOrUpdateBranch" method="post">
                            <input type="hidden" id="Id" name="Id" value="0" />
                            <div class="form-group mb-3">
                                <label>Name</label>
                                <input type="text" name="Name" id="Name" class="form-control" required />
                            </div>
                            <div class="form-group mb-3">
                                <label>Address</label>
                                <input type="text" name="Address" id="Address" class="form-control" />
                            </div>
                            <div class="form-group mb-3">
                                <label>Contact</label>
                                <input type="text" name="Contact" id="Contact" class="form-control" />
                            </div>
                            <div class="form-group mb-3">
                                <label>Subscription ID</label>
                                <input type="number" name="SubscriptionId" id="SubscriptionId" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-success">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

